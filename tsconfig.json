{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "**/node_modules/*",
        "./dist/**/*",
        "src/**/*.test.ts",
        "src/**/x-*.ts"
    ]
}
